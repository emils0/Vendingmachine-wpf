<Window x:Class="Vendingmachine_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vendingmachine_wpf"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Vendingmachine" Height="450" Width="650">
    <Grid>
        <Button Name="ProducerButton" HorizontalAlignment="Left" Width="85" Height="40" Margin="40,312,0,32" Click="ToggleProducer">this is a test</Button>
        <Button Name="SplitterButton" HorizontalAlignment="Left" Width="85" Height="40" Margin="140,312,0,32" Click="ToggleSplitter">start splitter</Button>
        <Button Name="SodaButton" HorizontalAlignment="Left" Width="85" Height="40" Margin="240,312,0,32" Click="ToggleSodaConsumer">consume soda</Button>
        <Button Name="BeerButton" HorizontalAlignment="Left" Width="85" Height="40" Margin="340,312,0,32" Click="ToggleBeerConsumer">consume beer</Button>
    </Grid>
</Window>
